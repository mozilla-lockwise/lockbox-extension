{
  "title": "Lockbox",
  "name": "lockbox",
  "id": "lockbox@mozilla.com",
  "version": "0.1.0-alpha",
  "main": "dist/bootstrap.js",
  "description": "A Lockbox extension for Firefox",
  "author": "Lockbox Team <lockbox-dev@mozilla.com>",
  "engines": {
    "firefox": ">=54"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-lockbox/lockbox-extension.git"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-lockbox/lockbox-extension/issues"
  },
  "homepage": "https://github.com/mozilla-lockbox/lockbox-extension#readme",
  "keywords": [
    "passwords",
    "crypto",
    "security",
    "addon"
  ],
  "scripts": {
    "doc": "documentation build src/webextension/** -f md -o docs/api.md",
    "postdoc": "mkdocs build",
    ":clean:doc": "git clean -fdX ./site ./docs",
    "autolint": "eslint .",
    "lint": "cross-env STRICT_LINT=1 npm run autolint --",
    "prebuild": "npm run-script autolint",
    "build": "webpack",
    "prerun": "npm run-script build",
    "run": "jpm run --addon-dir dist/ ${npm_config_jpm_runflags} --prefs jpm-prefs.json",
    "pretest": "npm run-script autolint",
    "test": "cross-env NODE_ENV=test nyc mocha-webpack --opts ./mocha-webpack.opts --webpack-config ./webpack.config.test.js -r test/setup.js test",
    "codecov": "nyc report --reporter=lcov && codecov",
    "clean": "git clean -fX ./dist ./*.xpi ./addon.env && npm run :clean:doc ",
    "distclean": "git clean -dfX",
    "prepackage": "npm run-script clean && cross-env NODE_SUGGESTED_ENV=production npm run-script build",
    "package": "echo TESTPILOT_ADDON_ID=${npm_package_id} > addon.env && echo TESTPILOT_ADDON_VERSION=${npm_package_version} >> addon.env && jpm xpi --addon-dir=dist/ --dest-dir=./ && mv null.xpi addon.xpi"
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ]
  },
  "dependencies": {
    "fluent": "^0.4.1",
    "fluent-intl-polyfill": "^0.1.0",
    "fluent-langneg": "^0.1.0",
    "fluent-react": "^0.4.1",
    "intl-pluralrules": "^0.1.0",
    "lockbox-datastore": "git+https://github.com/mozilla-lockbox/lockbox-datastore.git",
    "node-jose": "^0.10.0",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-copy-to-clipboard": "^5.0.0",
    "react-dom": "^16.0.0",
    "react-modal": "^3.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "async-wait-until": "^1.1.5",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-enzyme": "^1.0.0-beta.0",
    "codecov": "^2.3.0",
    "copy-webpack-plugin": "^4.1.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "documentation": "^5.3.2",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.7.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-mozilla": "^0.4.4",
    "eslint-plugin-no-unsanitized": "^2.0.1",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-only-warn": "^1.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "fetch-mock": "^5.13.1",
    "html-minifier": "^3.5.5",
    "html-webpack-plugin": "^2.30.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jpm": "^1.3.1",
    "jsdom": "^11.3.0",
    "json-templater": "^1.1.0",
    "mocha": "^4.0.1",
    "mocha-webpack": "^1.0.0-rc.1",
    "nyc": "^11.2.1",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.0.0",
    "redux-mock-store": "^1.3.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.5.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.7.1",
    "webpack-combine-loaders": "^2.0.3",
    "webpack-node-externals": "^1.6.0"
  }
}
