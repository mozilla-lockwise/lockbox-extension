{
  "title": "Lockbox",
  "name": "lockbox",
  "version": "0.1.0-pre",
  "main": "dist/bootstrap.js",
  "description": "A Lockbox extension for Firefox",
  "author": "Lockbox Team <lockbox@mozilla.com>",
  "engines": {
    "firefox": ">=54"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-lockbox/lockbox-extension.git"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-lockbox/lockbox-extension/issues"
  },
  "homepage": "https://github.com/mozilla-lockbox/lockbox-extension#readme",
  "keywords": [
    "passwords",
    "crypto",
    "security",
    "addon"
  ],
  "scripts": {
    "prerun": "npm run-script build",
    "run": "jpm run --addon-dir dist/ ${npm_config_jpm_runflags}",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "git clean -fX ./dist ./*.xpi",
    "distclean": "git clean -dfX",
    "prebuild": "npm run-script lint",
    "build": "webpack",
    "prepackage": "npm run-script clean && npm run-script build",
    "package": "cd dist && zip -r ../${npm_package_name}-${npm_package_version}.xpi *",
    "lint": "eslint src/**/*.js src/**/*.jsm"
  },
  "dependencies": {
    "fluent": "^0.4.1",
    "fluent-intl-polyfill": "^0.1.0",
    "fluent-langneg": "0.0.2",
    "fluent-react": "^0.4.1",
    "lockbox-datastore": "git+https://github.com/mozilla-lockbox/lockbox-datastore.git",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-mozilla": "^0.4.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-standard": "^3.0.1",
    "jpm": "^1.3.1",
    "webpack": "^3.2.0"
  }
}
