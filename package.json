{
  "title": "Lockbox",
  "name": "lockbox",
  "version": "0.1.0-pre",
  "main": "dist/bootstrap.js",
  "description": "A Lockbox extension for Firefox",
  "author": "Lockbox Team <lockbox@mozilla.com>",
  "engines": {
    "firefox": ">=54"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-lockbox/lockbox-extension.git"
  },
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-lockbox/lockbox-extension/issues"
  },
  "homepage": "https://github.com/mozilla-lockbox/lockbox-extension#readme",
  "keywords": [
    "passwords",
    "crypto",
    "security",
    "addon"
  ],
  "scripts": {
