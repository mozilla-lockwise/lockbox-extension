{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:mozilla/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true,
    "es6": true
  },
  "plugins": [
    "mozilla",
    "react"
  ],
  "rules": {
    "curly": 2,
    "no-console": 1,
    "no-func-assign": 0
  }
}
