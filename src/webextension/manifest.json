{
  "manifest_version": 2,
  "name": "Lockbox",
  "version": "0.1pre",

  "description": "Improved password management for Firefox",

"applications": {
  "gecko": {
    "id": "lockbox@mozilla.com",
    "update_url": "https://github.com/mozilla-lockbox/lockbox-extension/blob/master/updates.json"
  }
}

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "512": "icons/lock.png"
    },
    "default_title": "Lockbox"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}
