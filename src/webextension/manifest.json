{
  "manifest_version": 2,
  "name": "Lockbox",
  "version": "0.1pre",

  "description": "Improved password management for Firefox",

  "sidebar_action": {
    "default_title": "Saved Logins",
    "default_panel": "sidebar.html",
    "browser_style": true
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}
