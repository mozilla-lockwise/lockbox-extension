{
  "manifest_version": 2,
  "name": "__TITLE__",
  "version": "__VERSION__",

  "description": "__DESCRIPTION__",

  "applications": {
    "gecko": {
      "id": "__AUTHORID__",
      "update_url": "https://github.com/mozilla-lockbox/lockbox-extension/blob/master/updates.json"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "512": "icons/lock.png"
    },
    "default_title": "__TITLE__"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}
